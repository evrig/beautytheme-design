<?xml version="1.0"?>
<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="hyva_product_slider" />
    <body>
        <referenceBlock name="hero" remove="true"/>
        <referenceBlock name="content-1" remove="true"/>
        <referenceContainer name="content">
            <block class="Magento\Cms\Block\Block" name="home-three-blocks" before="slider-1">
                <arguments>
                    <argument name="block_id" xsi:type="string">home-three-blocks</argument>
                </arguments>
            </block>
            <block name="slider-1" template="Magento_Catalog::product/slider/product-slider.phtml" before="slider-2">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Watches</argument>
                    <argument name="category_ids" xsi:type="string">6</argument>
                    <argument name="page_size" xsi:type="string">8</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="offter-section" before="slider-2">
                <arguments>
                    <argument name="block_id" xsi:type="string">offter-section</argument>
                </arguments>
            </block>
            <block name="slider-2" template="Magento_Catalog::product/slider/product-slider.phtml" after="-">
                <arguments>
                    <argument name="title" xsi:type="string" translate="true">Popular Products</argument>
                    <argument name="price_from" xsi:type="string">30</argument>
                    <argument name="price_to" xsi:type="string">100</argument>
                    <argument name="page_size" xsi:type="string">8</argument>
                    <argument name="sort_attribute" xsi:type="string">price</argument>
                    <argument name="sort_direction" xsi:type="string">DESC</argument>
                    <argument name="hide_details" xsi:type="boolean">true</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="our-brands" before="policy-shop">
                <arguments>
                    <argument name="block_id" xsi:type="string">our-brands</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="policy-shop" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">policy-shop</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="script-glider-js" template="Magento_Theme::page/js/gliderjs.phtml"/>
        </referenceContainer>
    </body>
</page>
